{
	"manifest_version": 2,
	"name": "__MSG_appName__",
	"version": "1.2",
	"default_locale": "en",
	"description": "__MSG_appDescription__",
	"permissions": [
		"storage"
	],
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},
	"content_scripts": [ {
		"matches": [
			"http://*.edu/*",
			"https://*.edu/*"
		],
		"include_globs": [
			"https://bb.???.edu/*",
			"http://bb.???.edu/*",
			"https://blackboard.???.edu/*",
			"http://blackboard.???.edu/*"
		],
		"js": [ "scripts/shared.js", "scripts/enhance.js" ],
		"run_at": "document_end"
	} ],
	"options_page": "options.html",
	"background": {
		"page": "background.html",
		"persistent": false
	}
}
